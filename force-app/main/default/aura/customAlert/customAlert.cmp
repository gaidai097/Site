<aura:component >
	<aura:attribute name="msg" type="String" />
    <aura:attribute name="severity" type="String" />
    <div  > 
        <div aura:id="currentAlert" > 
        <div class="{!v.severity + ' slds-grid custom_alert_container'}" >
            <div class="slds-col slds-size_11-of-12" >
                <div class="alertHeader">
                </div>
                <div class="alertBody">
                    {!v.msg}
                </div>
            </div>
            <div class="slds-col slds-size_1-of-12" >
                <span class="closeBtn">
                    <button class="slds-button slds-button_icon slds-button_icon-small deselectIcon" onclick="{!c.closeAlert}" title="Close">                
                        <lightning:icon size="x-small" class="removeIcon"  iconName="utility:close" alternativeText="Close" />
                        <span class="slds-assistive-text">Close</span>
                    </button>
                    
                </span>
            </div>
        </div>
             </div>
    </div>
        
</aura:component>