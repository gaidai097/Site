<aura:component > 
	<aura:attribute name="job" type="Job_Advertisement__c"/>
    <aura:attribute name="selectedJobs" type="Job_Advertisement__c[]" />
    <aura:handler name="init" action="{!c.doInit}" value="{!this}"/>
    <aura:handler event="c:removeFromSelectedList" action="{!c.removeFromSelectedList}"/>
    <aura:registerEvent name="selectJob" type="c:selectJob"/>
    <aura:registerEvent name="deselectJob" type="c:deselectJob"/>
    <lightning:accordionSection name="{!v.job.Id}" label="{!v.job.Name}" class="slds-card">
       
        <aura:set attribute="body">
            <div class="slds-grid">
                <div class="slds-col slds-size_9-of-12">
                    <div class="slds-grid">
                        <div class="slds-col slds-size_3-of-12">
                            <p>ID : </p>
                        </div>
                        <div class="slds-col slds-size_6-of-12">
                            <p>{!v.job.Id}</p>
                        </div>
                    </div>  
                    <div class="slds-grid">
                        <div class="slds-col slds-size_3-of-12">
                            <p>Name : </p>
                        </div>
                        <div class="slds-col slds-size_6-of-12">
                            <p>{!v.job.Name}</p>
                        </div>
                    </div> 
                    <div class="slds-grid">
                        <div class="slds-col slds-size_3-of-12">
                            <p>CreatedDate : </p>
                        </div>
                        <div class="slds-col slds-size_6-of-12">
                            <lightning:formattedDateTime value="{!v.job.CreatedDate}" year="numeric" day="2-digit" month="long"/>
                        </div>
                    </div> 
                    <aura:renderIf isTrue="{!v.job.email__c != NULL }">
                        <div class="slds-grid">
                            <div class="slds-col slds-size_3-of-12">
                                <p>Status : </p>
                            </div>
                            <div class="slds-col slds-size_6-of-12">
                                <p>{!v.job.Status__c}</p>
                            </div>
                        </div> 
                    </aura:renderIf>
                    <aura:renderIf isTrue="{!v.job.Location__c != NULL }">
                        <div class="slds-grid">
                            <div class="slds-col slds-size_3-of-12">
                                <p>Location : </p>
                            </div>
                            <div class="slds-col slds-size_6-of-12">
                                <p>{!v.job.Location__c}</p>
                            </div>
                        </div>
                    </aura:renderIf>
                    <div class="slds-grid">
                        <div class="slds-col slds-size_3-of-12">
                            <p>Salary : </p>
                        </div>
                        <div class="slds-col slds-size_6-of-12">
                            <span>{!v.job.SalaryMin__c} </span>  
                            
                            <aura:renderIf isTrue="{!v.job.SalaryMax__c == NULL}">
                                <span> ~</span>
                                <aura:set attribute="else">
                                    <span>{!' - ' + v.job.SalaryMax__c }</span>   
                                </aura:set>
                            </aura:renderIf> 
                        </div>
                    </div>
                </div>
                <div class="slds-col slds-size_3-of-12">
                    <p>
                        <lightning:input aura:id="isSelected" type="toggle" 
                                         label="Selected?"
                                         name="selected"
                                         class="slds-p-around--small"
                                         messageToggleActive="Yes"
                                         messageToggleInactive="No"
                                         onchange="{!c.toggleCard}"/>
                    </p>
                </div>
            </div>
        </aura:set>
    </lightning:accordionSection>
    
</aura:component>